{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "space-before-function-paren": [
            "off"
        ],
        "no-trailing-spaces": [
            "off"
        ],
        "no-extra-semi": [
            "disable"
        ]
    }
}